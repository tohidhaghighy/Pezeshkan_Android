<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IllnessManagment.ManagmentIllnessVisitListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:background="@drawable/greengradientbutton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لیست شکایات"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/backpng"
            android:id="@+id/btnbacklogin"
            android:scaleType="fitCenter"
            android:background="@color/transparent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:background="@drawable/shadow_bottom_item">
        <TextView
            android:id="@+id/txtnumber"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="کد پیگیری"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/txtasktext"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="متن شکایت"
            android:layout_margin="5dp"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleprotestlistandanswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>
</LinearLayout>