<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:background="@drawable/greengradientbutton">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ارسال پیام به بیمار"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="25dp"/>
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/backpng"
                    android:id="@+id/btnbacklogin"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"/>
            </RelativeLayout>
            <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
                android:id="@+id/progillnessinfo"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtnameofpharmacymanagment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:layout_alignBottom="@+id/imgcircleuser"
                    android:text="شما میتوانید متن خود برای تحویل دارو را به بیمار اطلاع رهید"
                    android:layout_margin="5dp"/>


                <EditText
                    android:id="@+id/txtmassageofpharmacymanagment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="متن را وارد کنید"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:minLines="5"
                    android:text=""/>

                <Button
                    android:id="@+id/btnaddmassageofpharmacymanagment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="دارو موجود است"
                    android:textColor="@color/white"
                    android:background="@color/darkred"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>