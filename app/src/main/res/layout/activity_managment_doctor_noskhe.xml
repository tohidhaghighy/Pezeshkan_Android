<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoctorManagment.ManagmentDoctorQuestion2Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:background="@drawable/greengradientbutton">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نسخه بیمار"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="15dp"/>
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/backpng"
                    android:id="@+id/btnbacklogin"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnaddfinalynoskheandshownoskhetouser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نهایی کردن نسخه"
                    android:background="@color/darkgreen"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shadow_bottom_item"
                android:layoutDirection="rtl">


                <EditText
                    android:id="@+id/txttextofsearchlistmanagment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="دارو را جستجو کن ..."
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="5dp"/>
                <Button
                    android:id="@+id/btnadddragpharmacymanagment"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="درج دارو"
                    android:background="@color/darkred"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shadow_bottom_item"
                android:layoutDirection="rtl">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="نام دارو"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="تعداد دارو"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="انتخاب "
                    android:layout_margin="5dp"/>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/doctormanagmentselectiondraglistrecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/shadow_bottom_item"
                android:layoutDirection="rtl">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="نام دارو"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="تعداد دارو"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="حذف "
                    android:layout_margin="5dp"/>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/doctormanagmentfinallynoskhelistrecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>