<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgheader1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:foregroundGravity="center_horizontal"
                android:src="@drawable/logheader"
                android:scaleType="centerCrop"/>
            <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
                android:id="@+id/progressbarlogin"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icons"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="در اینجا میتوانید نوع ثبت نام را انتخاب کنید"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/btnillnessinsert"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="ثبت نام بیمار"
                        android:textColor="@color/white"
                        android:background="@drawable/greengradientbutton"
                        android:textSize="15dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/btndoctorinsert"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="ثبت نام دکتر"
                        android:textColor="@color/white"
                        android:background="@drawable/greengradientbutton"
                        android:textSize="15dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">
                   <Button
                       android:id="@+id/btnjudgeinsert"
                       android:layout_width="0dp"
                       android:layout_height="60dp"
                       android:layout_weight="1"
                       android:text=" کارشناس آزمایشگاه"
                       android:textColor="@color/white"
                       android:background="@drawable/yellowgradientbuttom"
                       android:textSize="15dp"
                       android:layout_margin="5dp"/>
                   <Button
                       android:id="@+id/btnpharmacyinsert"
                       android:layout_width="0dp"
                       android:layout_height="60dp"
                       android:layout_weight="1"
                       android:text="ثبت نام داروخانه"
                       android:textColor="@color/white"
                       android:background="@drawable/yellowgradientbuttom"
                       android:textSize="15dp"
                       android:layout_margin="5dp"/>
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/btnnirseinsert"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text=" ثبت نام پرستار - در حال تکمیل"
                        android:textColor="@color/white"
                        android:background="@drawable/yellowgradientbuttom"
                        android:textSize="15dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>