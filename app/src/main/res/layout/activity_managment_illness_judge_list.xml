<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IllnessManagment.ManagmentIllnessVisitListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:background="@drawable/greengradientbutton">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لیست ویزیت کارشناس آزمایشگاه"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/backpng"
            android:id="@+id/btnbacklogin"
            android:scaleType="fitCenter"
            android:background="@color/transparent"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/shadow_bottom_item"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="نام بیمار"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="هزینه ویزیت"
            android:layout_margin="5dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="شروع چت"
            android:layout_margin="5dp"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/illnessmanagmentjudgelistrecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>