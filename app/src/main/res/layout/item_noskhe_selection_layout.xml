<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/shadow_bottom_item"
        android:layoutDirection="rtl">

        <TextView
            android:id="@+id/txtnameofsearchofnoskhe"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="نام دارو"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/txtcountofsearchofnoskhe"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="تعداد دارو"
            android:inputType="number"
            android:text="1"
            android:layout_margin="5dp"
            android:background="@drawable/shadow_bottom_item"/>
        <Button
            android:id="@+id/btnselectdragtofinalylist"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="انتخاب "
            android:background="@color/darkgreen"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>

    </LinearLayout>
</LinearLayout>