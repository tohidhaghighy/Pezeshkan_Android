<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrolldoctordetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/headerpaneldoctor"
            android:background="@drawable/greengradientbutton">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgcircleofdoctor"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/back"
                app:civ_border_width="5dp"
                app:civ_border_color="#FFECEFF1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/txtnameofdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/imgcircleuser"
                android:text="توحید"
                android:paddingBottom="10dp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/namelinerlitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/headerpaneldoctor"
            android:layoutDirection="rtl"
            android:padding="10dp"
            android:background="@drawable/shadow_bottom_item">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backpng"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="تخصص : " />
            <TextView
                android:id="@+id/txttakhasosofdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/takhasoslinerlitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/namelinerlitem"
            android:layoutDirection="rtl"
            android:padding="10dp"
            android:background="@drawable/shadow_bottom_item">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backpng"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="آدرس : " />
            <TextView
                android:id="@+id/txtcityofdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/addresslinerlitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/takhasoslinerlitem"
            android:layoutDirection="rtl"
            android:padding="10dp"
            android:background="@drawable/shadow_bottom_item">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backpng"/>
            <TextView
                android:id="@+id/txtdescriptionofdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text=" "/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/costlinerlitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/addresslinerlitem"
            android:layoutDirection="rtl"
            android:padding="10dp"
            android:background="@drawable/shadow_bottom_item">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backpng"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="هزینه ویزیت : " />
            <TextView
                android:id="@+id/txtcostofdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="100000 $ "/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/timeslinerlitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/costlinerlitem"
            android:layoutDirection="rtl"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="22dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:text="زمان های ویزیت "/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/timevisitlis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_below="@id/timeslinerlitem"
            android:background="@drawable/shadow_bottom_item"
            android:layoutDirection="rtl">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="مشخصات"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="توضیحات محصول"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="رزرو وقت ملاقات"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_below="@id/timevisitlis"
            android:layoutDirection="rtl">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/visittimelistrecyvleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
