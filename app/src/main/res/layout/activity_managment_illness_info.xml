<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:background="@drawable/greengradientbutton">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اطلاعات کاربری مدیریت"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="15dp"/>
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/backpng"
                    android:id="@+id/btnbacklogin"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"/>
            </RelativeLayout>
            <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
                android:id="@+id/progillnessinfo"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgillnessimageinfo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/back"
                    app:civ_border_width="4dp"
                    app:civ_border_color="#3949AB"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/txtillnessnameinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="22dp"
                    android:textColor="#000"
                    android:layout_alignBottom="@+id/imgcircleuser"
                    android:text="توحید حقیقی"/>
                <TextView
                    android:id="@+id/txtillnessnumberinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="22dp"
                    android:textColor="#000"
                    android:layout_alignBottom="@+id/imgcircleuser"
                    android:text="۰۹۱۴۴۹۶۷۹۴۱"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="قند خون"
                        android:layout_margin="5dp"/>
                    <EditText
                        android:id="@+id/txtillnesssugerinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="قند خون را وارد کنید"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:maxLength="4"
                        android:text="0"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="فشار خون"
                        android:layout_margin="5dp"/>
                    <EditText
                        android:id="@+id/txtillnesspressureinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="فشار را وارد کنید"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:maxLength="4"
                        android:text="0"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="سن"
                        android:layout_margin="5dp"/>
                    <EditText
                        android:id="@+id/txtillnessageinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="سن را وارد کنید"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="0"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="سریال بیمه"
                        android:layout_margin="5dp"/>
                    <EditText
                        android:id="@+id/txtillnessserialinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="سریال بیمه را وارد کنید"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:text="0"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="وزن"
                        android:layout_margin="5dp"/>
                    <EditText
                        android:id="@+id/txtillnessweightinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="وزن را وارد کنید"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="0"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/btnillnessadddateinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="انقضا بیمه"
                        android:background="@color/darkgreen"
                        android:textColor="@color/white"
                        android:padding="10dp"/>
                    <EditText
                        android:id="@+id/txtillnessdateinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="تاریخ انقضای بیمه را وارد کنید"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="بیمه خود را انتخاب کنید"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/spnillnessbimeinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                </Spinner>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="شهر خود را انتخاب کنید"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
                <Spinner
                    android:id="@+id/spnillnesscityinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                </Spinner>

                <Button
                    android:id="@+id/btnillnessupdateinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ویرایش اطلاعات"
                    android:textColor="@color/white"
                    android:background="@color/darkred"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>