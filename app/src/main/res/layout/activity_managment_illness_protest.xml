<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/greengradientbutton">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/backpng"
                    android:id="@+id/btnbacklogin"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ثبت شکایت"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="15dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icons"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="برای ثبت شکایت خود از نسخه یا نحوه پاسخ دهی دکتر کد پیگیری روی نسخه و توضیحات مشکل را وارد کنید تا مشکل توسط واحد پشتیبانی پیگیری شود"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lines="4"
                    android:paddingLeft="10dp"
                    android:maxLines="3"
                    android:textSize="17dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/txtprotestcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="کد پیگیری را وارد کنید"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_textsms_black_24dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/txtprotestdes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="متن پیام را وارد کنید"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="text"
                    android:lines="3"
                    android:drawableLeft="@drawable/ic_textsms_black_24dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/costtimevisitlis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_below="@id/txttimevisitlis"
                android:background="@drawable/shadow_bottom_item"
                android:layoutDirection="rtl">
                <Button
                    android:id="@+id/btnprotestitem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ثبت شکایت"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:layout_margin="5dp"/>
                <Button
                    android:id="@+id/btnlistprotestitem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="لیست شکایات"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>