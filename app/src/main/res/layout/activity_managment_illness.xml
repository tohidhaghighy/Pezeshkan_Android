<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="rtl"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:background="@drawable/doctorheader">


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtdoctornameManagment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:padding="15dp"
                    android:textColor="#000"
                    android:layout_alignBottom="@+id/imgcircleuser"
                    android:background="@drawable/shadow_button"
                    android:text="پنل مدیریت"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnvisittimeIllnessManagment"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ویزیت بیمار"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnpharmacyillnessManagment"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="بخش داروخانه ها"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnjudgeIllnessManagment"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="بخش کارشناس آزمایشگاه"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnownpageIllnessManagment"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="اطلاعات شخصی"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnchangepassillness"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="تغییر پسورد"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnsetprotest"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ثبت شکایت"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/btnMainPageIllnessManagment"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ورود به صفحه اصلی"
                    android:textColor="@color/white"
                    android:background="@drawable/greengradientbutton"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Bermuda Darman"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>